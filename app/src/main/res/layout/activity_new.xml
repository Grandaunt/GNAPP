<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".NewActivity">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_time"/>
            <TextView
                android:id="@+id/tv_new_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="开始时间"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="—"
                android:background="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_new_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="结束时间"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_zhiwu"/>
            <TextView
                android:id="@+id/tv_new_furit_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="果树种类"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_area"/>

            <!--<TextView-->
                <!--android:id="@+id/tv_new_area"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/activity_horizontal_margin"-->
                <!--android:background="@color/white"-->
                <!--android:text="面积"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:textSize="18sp" />-->
            <EditText android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="1"
                android:background="@drawable/edit"
                />
               <TextView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="亩"
                   android:textColor="@color/colorPrimaryDark"
                   android:background="@color/white"
                   android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_num"/>
            <TextView
                android:id="@+id/tv_new_beer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="所需蜜蜂数量 /千"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textSize="18sp" />

        </LinearLayout>
        <!--<com.jaygoo.widget.RangeSeekBar-->
            <!--android:id="@+id/seekbar5"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="80dp"-->
            <!--app:rsb_mode="range"-->
            <!--app:rsb_progress_height="6dp"-->
            <!--app:rsb_progress_radius="0dp"-->
            <!--app:rsb_tick_mark_mode="other"-->
            <!--app:rsb_indicator_text_size="12sp"-->
            <!--app:rsb_tick_mark_text_array="@array/markArray"-->
            <!--app:rsb_progress_color="@color/colorProgress"-->
            <!--app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"-->
            <!--app:rsb_thumb_drawable="@drawable/seekbar_thumb"-->
            <!--app:rsb_indicator_height="20dp"-->
            <!--app:rsb_indicator_width="80dp"-->
            <!--app:rsb_indicator_show_mode="alwaysShow"-->
            <!--app:rsb_indicator_radius="8dp"-->
            <!--app:rsb_tick_mark_number="4"-->

            <!--/>-->
        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/seekbar5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            app:rsb_mode="range"
            app:rsb_progress_height="4dp"
            app:rsb_progress_radius="0dp"
            app:rsb_progress_default_color="@color/rsbColorThumbPressed"
            app:rsb_progress_color="@color/colorProgress"
            app:rsb_tick_mark_text_array="@array/wordsArray"
            app:rsb_tick_mark_text_margin="17dp"
            app:rsb_tick_mark_number="4"
            app:rsb_tick_mark_mode="other"
            app:rsb_tick_mark_gravity="center"
            app:rsb_tick_mark_text_color="@color/colorProgress"
            app:rsb_indicator_height="20dp"
            app:rsb_thumb_size="22dp"
            app:rsb_thumb_drawable="@drawable/thumb_yellow"
            app:rsb_indicator_show_mode="showWhenTouch"
            app:rsb_range_interval="25"
            app:rsb_indicator_padding_left="10dp"
            app:rsb_indicator_padding_right="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_mifeng"/>
            <TextView
                android:id="@+id/tv_new_beer_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="所需蜜蜂种类"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_ly"/>
            <TextView
                android:id="@+id/tv_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="留言"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textSize="18sp" />


        </LinearLayout>
        <EditText
            android:id="@+id/edt_aj_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:gravity="start"
            android:hint="请输入留言内容"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="120dp"
            android:paddingTop="13dp"
            android:textColor="@color/gray3"
            android:textColorHint="@color/gray9"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_miss_fn"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="寻找蜂农"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/sp_20"
            />
    </LinearLayout>
    </ScrollView>

</LinearLayout>